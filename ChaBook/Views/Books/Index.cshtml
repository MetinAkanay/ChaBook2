<!DOCTYPE html>
<html lang="en">
<head>
    @{
        Layout = "_Layout";
    }
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            min-height: 100vh;
            font-family: Arial, sans-serif;
            font-size: 14px;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        #container {
            display: flex;
            flex-grow: 1;
            width: 100%;
        }

        #sidebar {
            margin-left: -200px;
            width: 250px;
            background-color: #fcf5eb;
            padding: 20px;
            border-right: 1px solid #e1d3c1;
            overflow-y: auto;
            height: 1000px;
        }

        #main-content {
            flex-grow: 1;
            padding: 20px;
            background-color: #ffffff;
        }

        .bx--accordion {
            list-style: none;
            padding: 0;
            width: 100%;
        }

        .bx--accordion__item {
            padding: 1px 0px;
            border-bottom: 1px solid #e1d3c1;
        }

        .bx--accordion__content {
            padding-right: 1rem;
            padding-left: 0.5rem;
        }

        .bx--accordion__heading {
            padding: 0px;
            height: 44px;
        }

        .categories li {
            padding: 4px 0px;
        }

        .categories ul {
            margin-top: 10px;
        }

        input[type="checkbox"] {
            margin-right: 12px;
        }

        .dsearch {
            width: 100%;
            padding: 12px;
            border-radius: 2px;
            margin-bottom: 12px;
            font-size: 12px;
        }

        .save {
            width: 100%;
            border-radius: 2px;
            border: 1px solid #000000;
            padding: 8px;
            margin: 12px 0;
            font-weight: 600;
        }

        .protect {
            margin-top: 12px;
            padding: 12px 12px 16px;
            background-color: #F7F7FF;
            border-radius: 2px;
            margin-bottom: 24px;
        }

            .protect p {
                line-height: 20px;
            }

            .protect a {
                font-weight: bold;
                color: #000;
                text-decoration: none;
            }

        .container-custom {
            max-width: 100%;
        }

        .card-custom {
            width: 18rem;
        }

        #sidebar::-webkit-scrollbar {
            width: 0;
            height: 0; 
        }
    </style>
</head>
<body>
    <div id="container">
        <div id="sidebar" class="col-md-1">
            <div class="container mt-1">
                <ul data-accordion class="bx--accordion">
                    <li data-accordion-item class="bx--accordion__item">
                        <div class="bx--accordion__title">Category</div>
                        <div id="pane1" class="bx--accordion__content">
                            <input style="width: 200px;" class="dsearch" type="text" placeholder="Search Genre...">
                            <ul data-accordion class="categories" style="margin-left:-30px;">
                                <li>
                                    Popular Genre
                                    <ul>
                                        <li><input type="checkbox" id="fiction"><label for="fiction">Fiction</label></li>
                                        <li><input type="checkbox" id="non-fiction"><label for="non-fiction">Non-Fiction</label></li>
                                        <li><input type="checkbox" id="biography"><label for="biography">Biography</label></li>
                                        <li><input type="checkbox" id="self-help"><label for="self-help">Self-Help</label></li>
                                        <li><input type="checkbox" id="fantasy"><label for="fantasy">Fantasy</label></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li data-accordion-item class="bx--accordion__item">
                        <div class="bx--accordion__title">Language</div>
                        <div id="pane2" class="bx--accordion__content">
                            <input style="width: 200px;" class="dsearch" type="text" placeholder="Search Language...">
                            <ul data-accordion class="categories" style="margin-left:-30px;">
                                <li>
                                    Popular Language
                                    <ul>
                                        <li><input type="checkbox" id="english"><label for="english">English</label></li>
                                        <li><input type="checkbox" id="spanish"><label for="spanish">Spanish</label></li>
                                        <li><input type="checkbox" id="french"><label for="french">French</label></li>
                                        <li><input type="checkbox" id="german"><label for="german">German</label></li>
                                        <li><input type="checkbox" id="chinese"><label for="chinese">Chinese</label></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li data-accordion-item class="bx--accordion__item">
                        <div class="bx--accordion__title">Author</div>
                        <div id="pane3" class="bx--accordion__content">
                            <input style="width: 200px;" class="dsearch" type="text" placeholder="Search author...">
                            <ul data-accordion class="categories" style="margin-left:-40px;">
                                <li>
                                    Popular Authors
